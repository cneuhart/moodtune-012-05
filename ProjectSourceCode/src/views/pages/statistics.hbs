<script type="text/javascript" src="../../resources/js/statistics.js"></script>

<div id="wrapper">
  <div id="selectorHeader">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Artists</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Tracks</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Etc(temp)</button>
      </li>
    </ul>
    <form method="GET" action="/statistics">
      <label>statistics</label>
        <select name="time_range" id="time_range">
            <option value="short_term">short</option>
            <option value="medium_term">medium</option>
            <option value="long_term">long</option>
        </select>
      <input type="submit" value="Submit">
    </form>
  </div>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <div id="tableDiv">
      <table class="table table-striped table-bordered">
          <thead>
              <th>artist name</th>
              <th>artist popularity</th>
              <th>artist image</th>
              <th></th>
          </thead>
          {{#each artistdata.items}}

              <tr>
                  <td>{{name}}</td>
                  <td>{{popularity}}</td>
                  <td>
                      <img src="{{images.[0].url}}" width="90" height="90">
                  </td>
                  <td>

                  </td>
              </tr>

          {{/each}}
      </table>
      </div>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <div id="tableDiv">
      <table class="table table-striped table-bordered">
          <thead>
              <th>track name</th>
              <th>artist name</th>
              <th>image</th>
              <th></th>
          </thead>
          {{#each trackdata.items}}

              <tr>
                  <td>{{name}}</td>
                  <td>{{artists.[0].name}}</td>
                  <td>
                      <img src="{{album.images.[0].url}}" width="90" height="90">
                  </td>
                  <td>

                  </td>
              </tr>

          {{/each}}
      </table>
      </div>
    </div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">...</div>
  </div>
</div>

<style>
  #wrapper{
    background-color: white;
    margin: 1rem;
    border-radius: 1rem;
  }
  #tableDiv{
    overflow-y: scroll;
    max-height: 84vh;
  }
  #selectorHeader{
    display: flex;
    justify-content: space-between;
  }
  form{
    padding: 1rem;
  }
</style>
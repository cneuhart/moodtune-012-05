        <thead>
            <th>artist name</th>
            <th>artist popularity</th>
            <th>artist image</th>
            <th></th>
        </thead>
        {{#each data.items}}

            <tr>
                <td>{{name}}</td>
                <td>{{popularity}}</td>
                <td>
                    <img src="{{images.[0].url}}" width="90" height="90">
                </td>
                <td>

                </td>
            </tr>

        {{/each}}
    </table>
</div>
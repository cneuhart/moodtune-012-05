<div id="wrapper">
  <div id="selectorHeader">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Artists</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Tracks</button>
      </li>
    </ul>
  </div>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <div id="tableDiv">
      <table class="table table-striped table-bordered">
          <thead>
              <th>#</th>
              <th>artist name</th>
              <th>times recommended</th>
              <th>artist image</th>
          </thead>
          {{#each artistdata}}

              <tr>
                  <td>{{@index}}</td>
                  <td><a href="{{this.artist_uri}}">{{this.artist_name}}</a></td>
                  <td>{{this.frequency}}</td>
                  <td>
                      <img src="{{this.artist_image_url}}" width="90" height="90">
                  </td>
                  
              </tr>

          {{/each}}
      </table>
      </div>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <div id="tableDiv">
      <table class="table table-striped table-bordered">
          <thead>
              <th>#</th>
              <th>track name</th>
              <th>artist name</th>
              <th>times recommended</th>
              <th>image</th>
              
          </thead>
          {{#each trackdata}}

              <tr>
                  <td>{{@index}}</td>
                  <td><a href="{{this.track_uri}}">{{this.track_name}}</a></td>
                  <td>{{this.artist_name}}</td>
                  <td>{{this.frequency}}</td>
                  <td>
                      <img src="{{this.album_image_url}}" width="90" height="90">
                  </td>
                  
              </tr>

          {{/each}}
      </table>
      </div>
    </div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">...</div>
  </div>
</div>

<style>
  #wrapper{
    background-color: white;
    margin: 1rem;
    border-radius: 1rem;
  }
  #tableDiv{
    overflow-y: scroll;
    max-height: 84vh;
  }
  #selectorHeader{
    display: flex;
    justify-content: space-between;
  }
  form{
    padding: 1rem;
  }
</style>

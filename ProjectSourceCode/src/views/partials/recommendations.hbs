                            </tr>
                        {{/if}}
                        {{#if data.tracks}}
                        {{#each data.tracks}}
                            <tr>
                                <td>{{ name }}</td>
                                <td><img src="{{album.images.[0].url}}" width="90" height="90"></td>
                                <td>{{ artists.[0].name }}</td>
                                <td>{{album.name}}</td>
                            </tr>
                        {{/each}}
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </div>

                        <input type="submit" class="submitRecommendation" value="Submit">
                    </select>
                </form>
            </div>
                {{#if data}}
                    <form id="recInput" method="POST" action="/recommendations">
                        <input type="hidden" name="spotifyURIs" value="{{#each data.tracks}}{{ uri }},{{/each}}">
                        <input type="hidden" name="inputText" value="{{inputText}}">
                        <input type="submit" value="ADD PLAYLIST TO SPOTIFY">
                    </form>
                {{else}}
                    <form>
                        <input id="recInput" class="addToSpotify" type="button" value="ADD PLAYLIST TO SPOTIFY">
                    </form>
                {{/if}}
        </div>
        <div>
            <div id="tableContainer">
